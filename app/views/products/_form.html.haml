= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :sku
    = f.text_field :sku
  .field
    = f.label :supplier_code
    = f.text_field :supplier_code
  .field
    = f.label :field_1
    = f.text_area :field_1
  .field
    = f.label :field_2
    = f.text_area :field_2
  .field
    = f.label :field_3
    = f.text_area :field_3
  .field
    = f.label :field_4
    = f.text_area :field_4
  .field
    = f.label :field_5
    = f.text_area :field_5
  .field
    = f.label :field_6
    = f.text_area :field_6
  .field
    = f.label :price
    = f.text_field :price
  .actions
    = f.submit 'Save'
